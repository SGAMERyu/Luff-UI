{
  "name": "luff-ui",
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "build": "wireit",
    "build:icon": "wireit",
    "dev:component": "wireit",
    "play": "pnpm -C playground run dev",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "clear:dep": "npx npkill"
  },
  "wireit": {
    "build": {
      "command": "pnpm -C packages/luff-core run build",
      "files": [
        "packages/luff-core/**/**/*.vue",
        "packages/luff-core/**/**/*.ts",
        "packages/luff-core/**/*.ts"
      ],
      "dependencies": [
        "build:icon"
      ]
    },
    "build:icon": {
      "command": "pnpm -C packages/luff-icon run build"
    },
    "dev:component": {
      "command": "pnpm -C packages/luff-core run build --watch"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "chalk": "^5.2.0",
    "consola": "^2.15.3",
    "cz-git": "^1.4.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-define-config": "^1.15.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-plugin-vue": "^9.9.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "scule": "^1.0.0",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.14.2",
    "unplugin-vue-macros": "^1.7.3",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vite-plugin-inspect": "^0.7.15",
    "wireit": "^0.9.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  },
  "dependencies": {
    "@vueuse/core": "^9.12.0",
    "pinceau": "^0.14.7",
    "vue": "^3.2.47"
  }
}
