{
  "name": "luff-ui",
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "build:icon": "wireit",
    "build:component": "wireit",
    "play": "wireit",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache"
  },
  "wireit": {
    "play": {
      "command": "pnpm -C playground run play",
      "dependencies": [
        "build:component"
      ]
    },
    "build:component": {
      "command": "pnpm -C packages/luff-core run build",
      "files": [
        "packages/luff-core/**/**/*.vue",
        "packages/luff-core/**/**/*.ts",
        "packages/luff-core/**/*.ts"
      ]
    },
    "build:icon": {
      "command": "pnpm -C packages/luff-icon run build"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chalk": "^5.1.2",
    "consola": "^2.15.3",
    "cz-git": "^1.3.12",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.12.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-vue": "^9.8.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "latest",
    "rimraf": "^3.0.2",
    "scule": "^0.3.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "unplugin-auto-import": "^0.11.5",
    "unplugin-vue-define-options": "^0.11.2",
    "vite": "^3.2.4",
    "vite-plugin-dts": "^1.7.1",
    "wireit": "^0.8.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
