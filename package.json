{
  "name": "luff-ui",
  "scripts": {
    "prepare": "husky install",
    "commit": "git cz",
    "build": "wireit",
    "build:icon": "wireit",
    "dev:component": "wireit",
    "play": "pnpm -C playground run dev",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache"
  },
  "wireit": {
    "build": {
      "command": "pnpm -C packages/luff-core run build",
      "files": [
        "packages/luff-core/**/**/*.vue",
        "packages/luff-core/**/**/*.ts",
        "packages/luff-core/**/*.ts"
      ],
      "dependencies": [
        "build:icon"
      ]
    },
    "build:icon": {
      "command": "pnpm -C packages/luff-icon run build"
    },
    "dev:component": {
      "command": "pnpm -C packages/luff-icon run build --watch"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "chalk": "^5.2.0",
    "consola": "^2.15.3",
    "cz-git": "^1.4.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-define-config": "^1.13.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-plugin-vue": "^9.8.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "scule": "^1.0.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "unplugin-auto-import": "^0.12.1",
    "unplugin-vue-define-options": "^1.1.1",
    "vite": "^4.0.3",
    "vite-plugin-dts": "^1.7.1",
    "wireit": "^0.9.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
