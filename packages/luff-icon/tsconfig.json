{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "baseUrl": ".",
    "declarationDir": "./dist/types",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/components/*.ts"]
}
